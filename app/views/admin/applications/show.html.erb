<!-- /views/admin/applications/show.html.erb -->

<h1>Admin Application Show</h1>

<% @application.pets.each do |pet| %>
  <p><%= pet.name %>
  <!-- The if line below needs a @application_pet to check the status on whether to show button or not US12 -->
  <% if (@application.id + pet.id).status == "Pending" %>
    <%= button_to "Approve #{pet.name}", "/application_pets/#{@application.id}?pet_id=#{pet.id}", method: :patch %></p>
  <% else %>
    <%= "Approved!" %>
  <% end %>
<% end %>